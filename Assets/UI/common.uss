.empty-book {
    background-image: resource('Backgrounds/EmptyBook');
    width: 100%;
    height: 100%;
    -unity-background-scale-mode: scale-to-fit;
}

.character-select-container {
    width: 50%;
    height: 100%;
    align-items: flex-start;
    max-width: none;
}

.team-select-header {
    background-color: rgba(94, 94, 94, 255);
    left: 20%;
    padding-left: 50px;
    padding-right: 50px;
    padding-top: 25px;
    padding-bottom: 25px;
}

.team-header-label {
    font-size: 12px;
    -unity-font-style: bold;
}

.character-container {
    width: 75%;
    padding-top: 40px;
    flex-direction: row;
}

.character-portrait {
    width: 100px;
    height: 100px;
}

.text-container {
    width: 57.26%;
    align-items: flex-start;
    padding-left: 20px;
    padding-right: 0;
    padding-top: 0;
    padding-bottom: 0;
}

.character-name {
    font-size: 12px;
    -unity-font-style: bold;
    color: rgba(0, 0, 0, 255);
}

.archetype-name {
    color: rgba(0, 0, 0, 255);
    -unity-font-style: italic;
    font-size: 12px;
}

.description {
    background-color: rgba(255, 255, 255, 0);
    color: rgba(0, 0, 0, 255);
    white-space: normal;
    font-size: 12px;
    max-width: 100%;
}
