<Rooms>
    <!-- Room list must contain a room with id "StartRoom", 
        this is what the MapManager will start the game by loading-->
    <Room 
        type="StartRoom"
        id="StartRoom"
        >
        <!-- Room type: the actual classname in Scripts/Rooms/RoomImplementations that 
            this room should be an instantiation of -->
        <!-- Room id: the string that other rooms will identify this room
            by for purposes of connecting to it -->
        <ConnectedRooms>
            <!-- The rooms that will be connected to this room -->
            <Room id="WestRoom" door="WestDoor"/>
            <Room id="EastRoom" door="EastDoor"/>
            <Room id="NorthRoom" door="NorthDoor"/>
        </ConnectedRooms>
    </Room>
    <Room
        type="DefaultRoom"
        id="NorthRoom"
        >
        <ConnectedRooms>
            <Room id="StartRoom" door="SouthDoor"/>
        </ConnectedRooms>
    </Room>
    <Room
        type="DefaultRoom"
        id="WestRoom"
        >
        <ConnectedRooms>
            <Room id="StartRoom" door="EastDoor"/>
            <Room id="FarWestRoom" door="WestDoor"/>
        </ConnectedRooms>
    </Room>
    <Room
        type="DefaultRoom"
        id="EastRoom"
        >
        <ConnectedRooms>
            <Room id="StartRoom" door="WestDoor"/>
            <Room id="FarEastRoom" door="EastDoor"/>
        </ConnectedRooms>
    </Room>
    <Room
        type="DefaultRoom"
        id="FarEastRoom"
        >
        <ConnectedRooms>
            <Room id="EastRoom" door="WestDoor"/>
        </ConnectedRooms>
    </Room>
    <Room
        type="DefaultRoom"
        id="FarWestRoom"
        >
        <ConnectedRooms>
            <Room id="WestRoom" door="EastDoor"/>
        </ConnectedRooms>
    </Room>
</Rooms>